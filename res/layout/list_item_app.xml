<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="4dp"
              android:gravity="center_vertical"
              android:minHeight="@dimen/list_item_height"
              android:descendantFocusability="blocksDescendants">

    <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:id="@+id/icon"
            android:scaleType="center"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_launcher"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AppName"
                android:textSize="@dimen/font_size_medium"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:textColor="@color/text_primary_selectable"
                android:singleLine="true"
                android:ellipsize="end"/>

        <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SubTitle"
                android:textSize="@dimen/font_size_small"
                android:layout_alignBaseline="@id/title"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="4dp"
                android:textColor="@color/text_secondary_selectable"
                android:singleLine="true"
                android:ellipsize="end"/>

        <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textSize="@dimen/font_size_small"
                android:layout_below="@id/title"
                android:layout_alignParentLeft="true"
                android:textColor="@color/text_secondary_selectable"
                android:singleLine="true"
                android:ellipsize="end"/>

        <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATA"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/font_size_micro"
                android:layout_below="@id/title"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_secondary"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="@drawable/app_item_label"
                android:padding="4dp"/>


        <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APP"
                android:textSize="@dimen/font_size_micro"
                android:layout_below="@id/title"
                android:layout_toLeftOf="@id/label2"
                android:textColor="@color/text_secondary"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="@drawable/app_item_label"
                android:padding="4dp"/>

        <TextView
                android:id="@+id/info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info line 1"
                android:textSize="@dimen/font_size_tiny"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/text1"
                android:textColor="@color/text_secondary_selectable"
                android:singleLine="false"
                android:maxLines="2"
                android:ellipsize="end"/>

    </RelativeLayout>

    <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:checkboxStyle"
            android:padding="4dp"/>

</LinearLayout>

